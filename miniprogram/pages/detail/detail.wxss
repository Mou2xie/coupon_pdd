page {
  background: #F5F5F5;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

scroll-view {
  position: absolute;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
}

.main_image {
  /* border:1px black solid; */
  margin: 20rpx 20rpx 0rpx 20rpx;
}

.goods_cover_image {
  width: 100%;
  border-radius: 10rpx;
}

.goods_info {
  /* border:1px black solid; */
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  background: white;
  border-radius: 10rpx;
}

.price {
  /* border:1px black solid; */
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: flex-end;
}

.price_new {
  color: #F5302D;
  font-size: 38rpx;
}

.price_old {
  color: #C3C3C3;
  font-size: 30rpx;
  margin-left: 20rpx;
  margin-bottom: 2rpx;
}

.goods_from {
  /* border:1px black solid; */
  flex-grow: 1;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}

.goods_from image {
  width: 30rpx;
  height: 30rpx;
  margin-bottom: 6rpx;
}

.goods_from text {
  color: #C3C3C3;
  font-size: 30rpx;
  margin-left: 10rpx;
}

.name {
  /* border:1px black solid; */
  margin-top: 6rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  color: #4A4A4A;
  font-size: 38rpx;
  display: -webkit-box;             
  -webkit-box-orient: vertical;     
  -webkit-line-clamp: 2;            
  overflow: hidden;  
}

.coupon {
  /* border:1px black solid; */
  height: 110rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
  border-radius: 100rpx;
  background:#F64D46;
  display: flex;
  color: white;
}

.coupon_1 {
  /* border:1px black solid;  */
  display: flex;
  align-items: flex-end;
  font-size: 40rpx;
  padding-bottom: 12rpx;
  padding-left: 60rpx;
  background: #FF706A;
  border-top-left-radius: 100rpx;
  border-bottom-left-radius: 100rpx;
}

.coupon_2 {
  display: flex;
  align-items: center;
  font-size: 80rpx;
  background: #FF706A;
  padding-bottom: 5rpx;
  padding-left: 4rpx;
}

.coupon_3 {
  /* border:1px black solid;  */
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 15rpx;
  flex-grow: 1;
  background: #FF706A;
}

.coupon_3 text:last-child {
  font-size: 22rpx;
}

.coupon_4 {
  /* border:1px black solid;  */
  display: flex;
  justify-content: center;
  align-items: center;
  flex-grow: 1;
  background: #F64D46;
  border-top-right-radius: 100rpx;
  border-bottom-right-radius: 100rpx;
  font-size: 40rpx;
}

.no_coupon {
  margin: 6rpx 0rpx 10rpx 20rpx;
  font-size: 28rpx;
  color: #FC9591;
}

.no_coupon_btn {
  height: 110rpx;
  margin: 20rpx 20rpx 30rpx 20rpx;
  background: #F64D46;
  border-radius: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 40rpx;
}

.recommend {
  /* border:1px black solid;  */
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background: white;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.recommend text {
  margin: 20rpx;
  color: #69707E;
  font-size: 24rpx;
}

.goods_detail {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
  color: #4A4A4A;
  font-size: 35rpx;
}

.detail_image {
  /* border:1px black solid;  */
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.detail_image image:first-child {
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.detail_image image:last-child {
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.button {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
}

.button view{
  width: 50%;
  height: 80rpx;
  border: 1px solid #F64D46;
  background: white;
  color: #F64D46;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 40rpx;
}

.place_taken {
  height: 120rpx;
}

.bottom_bar {
  /* border:1px black solid; */
  width: 100%;
  height: 120rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: fixed;
  bottom: -120rpx;
  z-index: 2;
  opacity: 0;
}

.bottom_icon_container {
  /* border:1px black solid; */
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: smaller;
  color: #9D9E9F;
  font-weight: 300;
  flex-shrink: 0;
}

.margin {
  margin-left: 40rpx;
}


#share_button {
  /* border: 1px black solid; */
  background: white;
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 300;
}

.bottom_bar image {
  width: 40rpx;
  height: 40rpx;
}

.get_coupon_btn {
  height: 80rpx;
  width: 450rpx;
  background: #F64D46;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 100rpx;
  margin-right: 40rpx;
}




